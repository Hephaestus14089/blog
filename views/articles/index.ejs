<body>
     <div class="container">
          <h1 class="mb-4">Blog Articles</h1>
          <a href="/articles/new " class="btn btn-success">New Article</Article></a>

          <% articles.forEach(articles=> { %>
               <div class="card mt-4">
                    <div class="card-body">
                         <h4 class="card-title">
                              <%= articles.title %>
                         </h4>
                         <div class="card-subtitle text-muted mb-2">
                              <%= articles.createdAt.toLocaleDateString() %>
                         </div>
                         <div class="card-text mb-2"><%= articles.description %></div>
                    </div>
               </div>
               <% }) %>
     </div>
