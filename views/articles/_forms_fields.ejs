<div class="form-group">
     <label for="title">Title</label>
     <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
     
</div>

<div class="form-group">
     <label for="description">Description</label>
     <input type = "text" name="description" id="description" class="form-control" value = "<%= article.description %>">

</div>

<div class="form-group mb-5">
     <label for="markdown">Markdown</label>
     <input type = "text" required name="markdown" id="markdown" class="form-control" value ="<%= article.markdown %>">

</div>
